@page
@model TestAppWeb.Pages.EditCigarettModel
@{
}
<form method="post">
    <p>ID: @Model?.Cigarette?.Id</p>
    <label for="Color">Цвет</label>
    <input asp-for="Cigarette.Color" type="text" id="Color" name="Color"><span asp-validation-for="Cigarette.Color"></span>
    <h1></h1>
    <label for="Taste">Вкус</label>
    <input asp-for="Cigarette.Taste" type="text" id="Taste" name="Taste"><span asp-validation-for="Cigarette.Taste"></span>
    <label for="Strong">Кол-во крепкости</label>
    <input asp-for="Cigarette.Strong" type="text" id="Strong" name="Strong"><span asp-validation-for="Cigarette.Strong"></span>
    <h1></h1>
    <label for="Resin">Кол-во смолы</label>
    <input asp-for="Cigarette.Resin" type="text" id="Resin" name="Resin"><span asp-validation-for="Cigarette.Resin"></span>

    <button type="submit">Сохранить</button>
</form>