@page
@model TestAppWeb.Pages.MarlborosModel
@{
    ViewData["Title"] = "Marlboro";
}
<h1>Страница Пользователя</h1>
<a asp-page="EditСigarett" class="btn btn-primory stretched-link">Создать</a>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Color</th>
            <th>Taste</th>
            <th>Strong</th>
            <th>Resin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var marlboro in Model.marlboros)
        {
                <tr>
                    <td><a href="EditUser&id="+@marlboro.Id>@marlboro.Id</a></td>
                    <td>@marlboro.Color</td>
                    <td>@marlboro.Taste</td>
                    <td>@marlboro.Strong</td>
                    <td>@marlboro.Resin</td>
                </tr>
        }
    </tbody>
</table>
